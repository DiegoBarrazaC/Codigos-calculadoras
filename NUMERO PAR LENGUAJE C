#include <stdio.h>
//NUMERO PAR E IMPAR//
int main() {
    int n = 0;
    int numero;

    while (n != 10) {
        printf("Por favor digite un numero: ");
        scanf("%d", &numero);

        if (numero % 2 == 0) {
            printf("El numero %d es par\n", numero);
        } else {
            printf("El numero %d no es par\n", numero);
        }

        n++;
    }

    return 0;
}